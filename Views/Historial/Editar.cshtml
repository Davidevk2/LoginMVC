@{
    ViewData["Title"] = "Editar Observacion";
}

@model Historial

<div class="container mt-5">
    <div class="row">
        <div class="col d-flex float-right">
            <a asp-controller="Historial" asp-action="Index">&leftarrow; Regresar</a>
        </div>
    </div>
    <h2>Editar Observavion </h2>
    <form asp-controller="Historial" asp-action="Register" method="post">
        <div class="row">
            <div class="col-md-6">
            <div class="form-group">
                <label asp-for="FechaIngreso"></label>
                <input asp-for="FechaIngreso" class="form-control" readonly>
            </div>

            </div>
            <div class="col-md-6">
                <div class="form-group">
                    <label asp-for="FechaSalida"></label>
                    <input asp-for="FechaSalida" class="form-control" readonly>
                </div>

            </div>
        </div>
        <div class="form-group">
            <label asp-for="Observaciones"></label>
            <textarea asp-for="Observaciones" class="form-control" value=""></textarea>
        </div>
      
        <div class="form-group">
            <button class="btn btn-primary">Editar Observacion</button>
        </div>
    </form>
</div>