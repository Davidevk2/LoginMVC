@{
    ViewData["Title"] ="Index";
}


<div class="container mt-5">
    <div class="row">
        <div class="col d-flex float-right">
            <a asp-controller="Empleados" asp-action="Index">&leftarrow; Regresar</a>
        </div>
    </div>
    <h2>Listado de empleados</h2>
    <div class="row">
        <div class="col-md-6">
            <a asp-controller="Empleados" asp-action="Create" class="btn btn-success">Registrar Empleado</a>
        </div>
        <table class="table table-hover table-striped">
            <thead class="thead-dark">
                <tr>
                    <th>#</th>
                    <th>Id</th>
                    <th>Nombres</th>
                    <th>Apellidos</th>
                    <th>Identificaion</th>
                    <th>Correo</th>
                    <th>Contrase√±a</th>
                    <th>Fecha Registro</th>
                    <th>ultimo ingreso</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @{int numRow = 1;}
                @foreach (var empleado in Model){
                    <tr>
                        <td>@numRow</td>
                        <td>@empleado.Id</td>
                        <td>@empleado.Nombres</td>
                        <td>@empleado.Apellidos</td>
                        <td>@empleado.Identificacion</td>
                        <td>@empleado.Correo</td>
                        <td>@empleado.Password</td>
                        <td>@empleado.FechaRegistro</td>
                        <td>@empleado.UltimoIngreso</td>
                        <td><a asp-controller="" asp-action="" class="btn btn-sm btn-danger">Eliminar</a></td>
                    </tr>
                }
            </tbody>

        </table>
    </div>

</div>