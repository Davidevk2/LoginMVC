@{
    ViewData["Title"] = "Registrar Empleado";
}

@model Empleado

<div class="container mt-5">
    <div class="row">
        <div class="col d-flex float-right">
            <a asp-controller="Empleados" asp-action="Index">&leftarrow; Regresar</a>
        </div>
    </div>
    <h2>Registrar Empleado</h2>
    <form asp-controller="Empleados" asp-action="Register" method="post">
        <div class="form-group">
            <label asp-for="Nombres"></label>
            <input asp-for="Nombres" class="form-control" placeholder="">
        </div>
        <div class="form-group">
            <label asp-for="Apellidos"></label>
            <input asp-for="Apellidos" class="form-control" placeholder="">
        </div>
        <div class="form-group">
            <label asp-for="Identificacion"></label>
            <input asp-for="Identificacion" class="form-control" placeholder="">
        </div>
        <div class="form-group">
            <label asp-for="Correo"></label>
            <input asp-for="Correo" class="form-control" placeholder="">
        </div>
        <div class="form-group">
            <label asp-for="Password"></label>
            <input type="password" asp-for="Password" class="form-control" placeholder="">
        </div>
        <div class="form-group">
            <button class="btn btn-dark">Sign Up</button>
        </div>
    </form>
</div>